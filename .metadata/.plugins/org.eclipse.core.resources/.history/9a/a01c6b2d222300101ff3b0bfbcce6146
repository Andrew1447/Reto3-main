  <script>
    // Script para manejar la selección del tipo de devolución
    document.getElementById('tipo-devolucion').addEventListener('change', function() {
      const metodoReembolso = document.getElementById('metodo-reembolso');
      
      // Resetear opciones
      metodoReembolso.innerHTML = '<option value="" disabled selected>Selecciona un método de reembolso</option>';
      
      // Añadir opciones según el tipo de devolución
      if (this.value === 'estandar') {
        metodoReembolso.innerHTML += '<option value="original">Mismo método de pago original</option>';
        metodoReembolso.innerHTML += '<option value="transferencia">Transferencia bancaria</option>';
        metodoReembolso.innerHTML += '<option value="credito">Crédito en cuenta BilboSKP</option>';
      } else if (this.value === 'express') {
        metodoReembolso.innerHTML += '<option value="transferencia">Transferencia bancaria</option>';
        metodoReembolso.innerHTML += '<option value="credito">Crédito en cuenta BilboSKP</option>';
      } else if (this.value === 'credito') {
        metodoReembolso.innerHTML += '<option value="credito" selected>Crédito en cuenta BilboSKP</option>';
      }
    });
    
    // Prevenir envío del formulario (para demostración)
    document.getElementById('devolucion-form').addEventListener('submit', function(e) {
      e.preventDefault();
      alert('Solicitud de devolución enviada correctamente. Recibirás un correo de confirmación en breve.');
    });
    
    // Scroll suave al formulario cuando se hace clic en los botones
    document.querySelectorAll('.option-button').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const formElement = document.querySelector(this.getAttribute('href'));
        formElement.scrollIntoView({ behavior: 'smooth' });
        
        // Establecer el tipo de devolución según el botón pulsado
        const tipoDevolucion = document.getElementById('tipo-devolucion');
        if (this.textContent.includes('estándar')) {
          tipoDevolucion.value = 'estandar';
        } else if (this.textContent.includes('express')) {
          tipoDevolucion.value = 'express';
        } else if (this.textContent.includes('crédito')) {
          tipoDevolucion.value = 'credito';
        }
        
        // Disparar el evento change para actualizar el formulario
        const event = new Event('change');
        tipoDevolucion.dispatchEvent(event);
      });
    });
  </script>


